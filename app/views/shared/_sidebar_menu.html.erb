<div id="menu" class="hidden-print ui-resizable">
  <div class="slimScrollDiv" style="position: relative; overflow: hidden; width: auto; height: 2432px;">
    <div class="slim-scroll" data-scroll-height="800px" style="overflow: hidden; width: auto; height: 2432px;">
      <ul>
      <% side_menu.each do |value| %>
        <li class="large glyphicons <%= value[:icon] %> <%= 'active' if params[:controller] ==  value[:controller] %>"><%= link_to "<i></i><span>#{ value[:title] }</span>".html_safe, send(value[:url]) %>
            <%= "<span class='count'>#{ current_user.customers.count }</span>".html_safe if value[:controller] == 'customers' %>
        </li>
      <% end %>
        <li class="hasSubmenu large glyphicons t-shirt <%= 'active' if params[:controller] == 'categories' || 'products' %>">
          <a data-toggle="collapse" href="#menu_extra" class="collapsed"><i></i><span>Product</span></a>
          <ul class="collapse" id="menu_extra" style="height: 0px;">
            <li><%= link_to '<span> Stuff </span>'.html_safe, products_path %></li>
            <li><%= link_to '<span> Kategori </span>'.html_safe, categories_path %></li>
          </ul>
          <span class="count"><%= Product.count %></span>
        </li>
      </ul>
      <div class="clearfix"></div>
      <div class="separator bottom"></div>

      <div class="widget-sidebar-stats">
        <strong>3,540</strong>
        <span>Messages</span>
        <span class="pull-right sparkline"><canvas width="49" height="20" style="display: inline-block; width: 49px; height: 20px; vertical-align: top;"></canvas></span>
        <div class="clearfix"></div>
      </div>

      <div class="widget-sidebar-stats">
        <strong>2,510,402</strong>
        <span>Photos</span>
        <span class="pull-right sparkline"><canvas width="49" height="20" style="display: inline-block; width: 49px; height: 20px; vertical-align: top;"></canvas></span>
        <div class="clearfix"></div>
      </div>
      <div class="separator bottom"></div>

    </div>
    <div class="slimScrollBar ui-draggable" style="background-color: transparent; width: 7px; position: absolute; top: 0px; opacity: 0.4; display: none; border-top-left-radius: 7px; border-top-right-radius: 7px; border-bottom-right-radius: 7px; border-bottom-left-radius: 7px; z-index: 99; right: 1px; height: 2432px; background-position: initial initial; background-repeat: initial initial;">

    </div>
    <div class="slimScrollRail" style="width: 7px; height: 100%; position: absolute; top: 0px; display: none; border-top-left-radius: 7px; border-top-right-radius: 7px; border-bottom-right-radius: 7px; border-bottom-left-radius: 7px; background-color: rgb(51, 51, 51); opacity: 0.2; z-index: 90; right: 1px; background-position: initial initial; background-repeat: initial initial;">

    </div>
  </div>

  <div class="ui-resizable-handle ui-resizable-e" style="z-index: 1000;"></div>
  <div class="ui-resizable-handle ui-resizable-w" style="z-index: 1000;"></div>
</div>
